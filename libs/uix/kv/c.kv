# -*- coding: utf-8 -*-
<Login>:
     name:'login'
     BoxLayout:
          orientation:'horizontal'
          BoxLayout:
               size_hint_x:.5
               size_hint_y:1
               #size_hint:(.50, None)
               height:590
               Image:
                    source:"assets/images/bg.jpg"
                    allow_stretch:True
                    keep_ratio:False


          BoxLayout:
               orientation:'vertical'
               pos_hint:{'center_x':.75}
               size_hint_x:.5
               spacing:15
               BoxLayout:
                    orientation:'vertical'
                    MDLabel:
                         text:"Daphy store"
                         halign:'center'
                         font_style:'H5'
                    MDLabel:
                         text:'Produit cosmetique et pharmaceutique'
                         halign:'center'


               MDLabel:
                    text:"S'identifier"
                    halign:'center'
                    pos_hint:{'center_x':.5,'center_y':.80}
                    font_style:'H6'
               MDTextField:
                    id:user
                    hint_text:"Nom d'utilisateur"
                    size_hint_x:.8
                    icon_right:'account-circle'
                    mode:'rectangle'
                    pos_hint:{'center_x':.5,'center_y':.6}
					on_text_validate:passwd.focus()
               MDTextField:
                    id:passwd
                    hint_text:"Password       "
                    size_hint_x:.8
                    icon_right:'eye-off'
                    mode:'rectangle'
                    pos_hint:{'center_x':.5,'center_y':.46}
                    password:True
					on_text_validate:app.connect()
               MDRaisedButton
                    text:'login'
                    pos_hint:{'center_x':.5,'center_y':.27}
                    size_hint_x:.7
                    on_release:app.connect()
               Widget:
               MDTextButton:
                    text:'Mot de passe oublier ?'
                    pos_hint:{"center_x":.25,"center_y":.5}
                    theme_text_color:'Custom'
                    text_color:0,0.3,1,1
                    on_release:app.recovery()
               Widget:


